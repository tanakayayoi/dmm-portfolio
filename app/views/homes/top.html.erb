<h1>トップページ</h1>
<h3>週間人気ランキング</h3>
<% @posts.each do |post| %>
<div>
  <%= attachment_image_tag post, :image, size: "300x300", format: 'jpeg', fallback: "no_image.jpg" %>
  <p>投稿ユーザー画像：<%= attachment_image_tag post.user, :profile_image, size: "50x50", format: 'jpeg', fallback: "no_image.jpg" %></p>
  <p>タイトル：<%= post.title %></p>
  <p>本文：<%= post.body %></p>
  <p>タグ：
    <%# @post_tags.each do |tag| %>
      <%#= link_to tag.tag_name, tag_posts_path(tag_id: tag.id) %> (<%#= tag.posts.count %>)
    <%# end %>
  </p>
  <p>ユーザーネーム：<%= post.user.name %></p>
  <p><%= link_to "#{post.post_comments.count} コメント", post_path(post) %></p>
</div>
<% end %>

<h3>タグリスト</h3>
<% @tag_list.each do |list| %>
<span>
  <%= link_to list.tag_name, tag_posts_path(tag_id: list.id) %> (<%= list.posts.count %>)
</span>
<% end %>

<% if user_signed_in? %>
  <li>
    <%= link_to '投稿フォーム', new_post_path %>
  </li>
<% end %>