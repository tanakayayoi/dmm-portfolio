<div class="container">
  <div class="row">
    <div class="offset-md-2 col-md-8 offset-md-2">
      <div class="mx-auto">
        <br>
        <h3 class="text-center">お問い合わせ内容確認</h3>
        <br>
        <table class="table">
          <tbody>
            <tr>
              <td class="text-center" style="width: 30%;">氏名</td>
              <td><%= @contact.name %></td>
            </tr>
            <tr>
              <td class="text-center" style="width: 30%;">メールアドレス</td>
              <td><%= @contact.email %></td>
            </tr>
            <tr>
              <td class="text-center" style="width: 30%;">電話番号</td>
              <td><%= @contact.phone %></td>
            </tr>
            <tr>
              <td class="text-center" style="width: 30%;">件名</td>
              <td><%= @contact.subject %></td>
            </tr>
            <tr>
              <td class="text-center">メッセージ</td>
              <td style="white-space: pre-wrap;"><%= @contact.message %></td>
            </tr>
          </tbody>
        </table>
      </div>

      <div class="row">
        <!-- 各項目の入力値を送信 -->
        <div class="form-group col-6">
          <div class="d-flex justify-content-center">
            <%= form_with model: @contact, local: true do |f| %>
              <%= f.hidden_field :name %>
              <%= f.hidden_field :email %>
              <%= f.hidden_field :phone %>
              <%= f.hidden_field :subject %>
              <%= f.hidden_field :message %>
              <%= f.submit '送信', class: "btn btn-success" %>
            <% end %>
          </div>
        </div>
        <!-- 各項目の入力値を保持したまま入力画面に戻る -->
        <div class="form-group col-6">
          <div class="d-flex justify-content-center">
            <%= form_with model: @contact, url: back_path, local: true do |f| %>
              <%= f.hidden_field :name %>
              <%= f.hidden_field :email %>
              <%= f.hidden_field :phone %>
              <%= f.hidden_field :subject %>
              <%= f.hidden_field :message %>
              <%= f.submit '入力画面に戻る', class: "btn btn-primary" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>