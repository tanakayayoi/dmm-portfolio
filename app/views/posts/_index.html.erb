<% posts.each do |post| %>
<div>
  <%= link_to post_path(post) do %>
    <%= attachment_image_tag post, :image, size: "300x300", format: 'jpeg', fallback: "no_image.jpg" %>
  <% end %>
  <%= link_to user_path(post.user) do %>
    <p><%= attachment_image_tag post.user, :profile_image, size: "50x50", format: 'jpeg', fallback: "no_image.jpg" %></p>
  <% end %>
  <p>タイトル：<%= link_to post.title, post_path(post) %></p>
  <p>本文：<%= post.body %></p>
  <p>タグ：
    <% post.tags.each do |tag| %>
      <%= link_to tag.tag_name, tag_posts_path(tag_id: tag.id) %> (<%= tag.posts.count %>)
    <% end %>
  </p>
  <p>ユーザーネーム：<%= link_to post.user.name, user_path(post.user) %></p>
  <p><%= link_to "#{post.post_comments.count} コメント", post_path(post) %></p>
  <p class="favorite-btn_<%= post.id %>"><%= render 'favorites/favorite-btn', post: post %></p>
</div>
<% end %>