<% if post.favorited_by?(current_user) %>
  <%= link_to post.favorites.count, post_favorites_path(post), method: :delete, class: "fas fa-star star_yellow", remote: true %>
<% else %>
  <%= link_to post.favorites.count, post_favorites_path(post), method: :post, class: "far fa-star star_blue", remote: true %>
<% end %>