<h1>トップページ</h1>

<% @posts.each do |post| %>
<div>
  <%= attachment_image_tag post, :image %>
  <p>投稿ユーザー画像：<%#= attachment_image_tag post.user, :profile_image, size: "100X100", format: 'jpeg', fallback: "no_image.jpg" %></p>
  <p>ショップ名：<%= post.title %></p>
  <p>説明：<%= post.body %></p>
  <p>タグ：<%= post.tag %></p>
  <p>ユーザーネーム：<%= post.user.name %></p>
</div>
<% end %>

<% if user_signed_in? %>
  <li>
    <%= link_to '投稿フォーム', new_post_path %>
  </li>
<% end %>