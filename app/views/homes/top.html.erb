<h1>トップページ</h1>
<h3>週間人気ランキング</h3>
<%= render 'posts/index', posts: @posts, post_tags: @post_tags %>

<h3>タグリスト</h3>
<% @tag_list.each do |list| %>
<span>
  <%= link_to list.tag_name, tag_posts_path(tag_id: list.id) %> (<%= list.posts.count %>)
</span>
<% end %>

<% if user_signed_in? %>
  <li>
    <%= link_to '投稿フォーム', new_post_path %>
  </li>
<% end %>