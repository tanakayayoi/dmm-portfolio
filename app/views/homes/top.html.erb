<h1>トップページ</h1>

<% @posts.each do |post| %>
<div>
  <%= attachment_image_tag post, :image, size: "300x300", format: 'jpeg', fallback: "no_image.jpg" %>
  <p>投稿ユーザー画像：<%= attachment_image_tag post.user, :profile_image, size: "50x50", format: 'jpeg', fallback: "no_image.jpg" %></p>
  <p>タイトル：<%= post.title %></p>
  <p>本文：<%= post.body %></p>
  <p>タグ：<%= post.tag %></p>
  <p>ユーザーネーム：<%= post.user.name %></p>
  <p><%= link_to "#{post.post_comments.count} コメント", post_path(post) %></p>
</div>
<% end %>

<% if user_signed_in? %>
  <li>
    <%= link_to '投稿フォーム', new_post_path %>
  </li>
<% end %>