<h2>プロフィール編集</h2>
<%= form_with model:@user, local:true do |f| %>
  <label for="inputName">ニックネーム</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"ニックネーム"%><br>
  <%= attachment_image_tag @user, :profile_image, size: "60x60", fallback: "no_image.jpg"%><br>
  <label for="inputImage">プロフィール画像</label>
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %><br>
  <label for="introduction">自己紹介</label>
  <%= f.text_area :introduction %>
  <%= f.submit "変更を保存" %>
  <%= link_to '退会する', confirm_path %>
<% end %>