<table class="table">
  <% post.post_comments.each do |post_comment| %>
  <tr>
    <td>
      <%= link_to user_path(post_comment.user) do %>
        <%= attachment_image_tag post_comment.user, :profile_image, size: "30x30", fallback: "no_image.jpg", class: "rounded-circle" %>
        <br><small class="text-dark"><%= post_comment.user.name %></small>
      <% end %>
    </td>
    <td><%= post_comment.created_at.strftime('%Y/%m/%d') %></td>
    <td><%= post_comment.comment %></td>
    <% if post_comment.user == current_user %>
    <td>
      <%= link_to "削除", post_post_comment_path(post_comment.post, post_comment), method: :delete, remote: true %>
      <%= link_to "編集", edit_post_post_comment_path(post_comment.post, post_comment) %>
    </td>
    <% end %>
  <% end %>
  </tr>
</table>
