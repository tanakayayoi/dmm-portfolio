<% if post.favorited_by?(current_user) %>
  <%= link_to post.favorites.count, post_favorites_path(post), method: :delete, class: "fas fa-heart heart_red", remote: true %>
<% else %>
  <%= link_to post.favorites.count, post_favorites_path(post), method: :post, class: "far fa-heart heart_blue", remote: true %>
<% end %>